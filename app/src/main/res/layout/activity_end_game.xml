<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_text_color"
    android:orientation="vertical"
    tools:context=".ui.game.endGame.EndGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/fui_bgGitHub"
            android:text="@string/end_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/finalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/finalButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded5"
            android:text="@string/end_game_button"
            android:textColor="@color/button_text_color" />


    </LinearLayout>

</LinearLayout>